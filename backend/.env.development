# Development Environment Configuration
# This file is used for local development

NODE_ENV=development
PORT=3002
ALLOWED_ORIGINS=http://localhost:8081,http://localhost:5173

# SQLite for development
DATABASE_PROVIDER=sqlite
DATABASE_URL=file:./dev.db

# Development JWT secrets (insecure - for development only)
JWT_SECRET=dev-secret-change-in-production
JWT_REFRESH_SECRET=dev-refresh-secret-change-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# Password hashing
BCRYPT_ROUNDS=10

# CSRF
CSRF_TOKEN_LENGTH=32
CSRF_TOKEN_EXPIRY=3600000

# Rate limiting (relaxed for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
LOGIN_RATE_LIMIT=50
ACCOUNT_LOCKOUT_DURATION=300000

# Session
SESSION_EXPIRY=3600000
SESSION_CLEANUP_INTERVAL=600000

# Logging
LOG_LEVEL=debug
LOG_PRETTY_PRINT=true
LOG_SQL_QUERIES=true

# Proxmox
PROXMOX_DEFAULT_PORT=8006
PROXMOX_TIMEOUT=30000
PROXMOX_ALLOW_INSECURE=true

# Features
ENABLE_METRICS=false
ENABLE_API_DOCS=true
ENABLE_2FA=false
ENABLE_EMAIL=false
ENABLE_WEBHOOKS=false

# Debug
DEBUG=true
